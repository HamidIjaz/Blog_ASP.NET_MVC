@model Blog.Models.User
@{
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<form method="post" asp-action="Edit">

    <div asp-validation-summary="ModelOnly"></div>

    <div>
        <label class="form-label" asp-for="Id"></label><br>
        <input class="form-control" asp-for="Id" readonly><br>

    </div>

    <div>
        <label class="form-label" asp-for="Name"></label><br>
        <input class="form-control" asp-for="Name"><br>
        <span asp-validation-for="Name"></span>
    </div>
    <div>
        <label class="form-label" class="form-label" asp-for="Age"></label><br>
        <input class="form-control" asp-for="Age"><br>
        <span asp-validation-for="Age"></span>
    </div>
    <input class="btn btn-dark" type="submit" value="Save User" />

</form>